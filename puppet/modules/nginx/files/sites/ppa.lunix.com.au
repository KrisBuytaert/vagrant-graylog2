server {
  listen 80;
  server_name ppa.lunix.com.au;

  access_log /var/log/nginx/ppa.lunix.com.au-access.log;
  error_log /var/log/nginx/ppa.lunix.com.au-error.log;

  location / {
    root /var/packages;
    index index.html;
  }

  location ~ /(.*)/conf {
    deny all;
  }

  location ~ /(.*)/db {
    deny all;
  }
}

